@model CauseViewModel 

<div class="col-lg-4 col-md-6 col-12 mb-4 mb-lg-0">
    <div class="custom-block-wrap">
        <img src="@Url.Content(Model.Photo.ImageUrl)" class="custom-block-image img-fluid" alt="...">
    
        <div class="custom-block">
            <div class="custom-block-body">
                <h5 class="mb-3">@Model.Name</h5>
    
                <p>@Model.Description...</p>
    
                <div class="progress mt-4">
                    <div class="progress-bar w-75" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
    
                <div class="d-flex align-items-center my-2">
                    <p class="mb-0">
                        <strong>Place:</strong>
                        @Model.Place
                    </p>
    
                    <p class="ms-auto mb-0">
                        <strong>Date an Time:</strong>
                        @Model.Time
                    </p>
                </div>
            </div>
    
            <a href="donate.html" class="custom-btn btn">Help now</a>
        </div>
    </div>
</div>