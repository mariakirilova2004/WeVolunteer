@model UserRegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-12">

            <form class="custom-form volunteer-form mb-5 mb-lg-0" method="post" role="form">
                <h2 class="mb-4">@ViewData["Title"]</h2>
                <h3 class="mb-4">Become a volunteer today</h3>

                <div class="row">
                    <div class="col-lg-6 col-12">
                        <input type="text" class="form-control" id="volunteer-name" autocomplete="firstname" aria-required="true" placeholder="Oscar" asp-for="@Model.FirstName" />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6 col-12">                        
                        <input type="text" class="form-control" id="volunteer-name" autocomplete="lastname" aria-required="true" placeholder="Robertson" asp-for="@Model.LastName" />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6 col-12">                        
                        <input type="text" class="form-control" id="volunteer-username" autocomplete="username" aria-required="true" placeholder="OscarRob" asp-for="@Model.Username" />                      
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6 col-12">
                        <input type="text" class="form-control" id="volunteer-email" autocomplete="lastname" aria-required="true" placeholder="Oscarobertson@gmail.com" asp-for="@Model.Email" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6 col-12">
                        <input type="text" class="form-control" id="volunteer-phonenumber" autocomplete="phonenumber" aria-required="true" placeholder="08888888888" asp-for="@Model.PhoneNumber" />                        
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6 col-12">
                        <input class="form-control" id="volunteer-birthdate" autocomplete="" aria-required="true" value="01/01/1999" placeholder="01/01/2004" asp-for="@Model.BirthDate" />
                        <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6 col-12">
                        <input type="password" class="form-control" id="volunteer-password" autocomplete="password" aria-required="true" placeholder="Password123" asp-for="@Model.Password" />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6 col-12">
                        <input type="password" class="form-control" id="volunteer-password" autocomplete="" aria-required="true" placeholder="Password123" asp-for="@Model.ConfirmPassword" />
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    </div>


@*                  <div class="col-lg-6 col-12">
                        <input type="text" name="volunteer-subject" id="volunteer-subject" class="form-control" placeholder="Subject" required>
                    </div>

                    <div class="col-lg-6 col-12">
                        <div class="input-group input-group-file">
                            <input type="file" class="form-control" id="inputGroupFile02">
                            
                            <label class="input-group-text" for="inputGroupFile02">Upload your CV</label>

                            <i class="bi-cloud-arrow-up ms-auto"></i>
                        </div>
                    </div>*@
                </div>

@*                <textarea name="volunteer-message" rows="3" class="form-control" id="volunteer-message" placeholder="Comment (Optional)"></textarea>
*@
                <button type="submit" class="form-control">Submit</button> 
                
                <div class="mb-4">
                    <p>Already have an account? <a asp-controller="User" asp-action="Login">Sign in</a>.</p>
                </div>
            </form>
        </div>

        <div class="col-lg-6 col-12 data-image">
            <img src="~/bootstrap/images/smiling-casual-woman-dressed-volunteer-t-shirt-with-badge.jpg" class="volunteer-image" alt="">
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
