@model BecomeOrganizationFormModel

@{
    ViewData["Title"] = "Become Organization";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-12">

            <form class="custom-form volunteer-form mb-5 mb-lg-0" method="post" role="form">
                <h2 class="mb-4">@ViewData["Title"]</h2>
                <h3 class="mb-4">Make the first step today</h3>

                <div class="row">
                    <div class="col-lg-6 col-12">
                        <input type="text" class="form-control" id="organization-name" autocomplete="name" aria-required="true" placeholder="Youth Association" asp-for="@Model.Name" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6 col-12">                        
                        <input type="text" class="form-control" id="organization-headquarter" autocomplete="headquarter" aria-required="true" placeholder="CA, Las Vegas" asp-for="@Model.Headquarter" />
                        <span asp-validation-for="@Model.Headquarter" class="text-danger"></span>
                    </div>

                    <div class="col-lg-12 col-12">                        
                        <textarea name="organization-description" rows="3" class="form-control" id="volunteer-message" placeholder="Description" asp-for="@Model.Description"></textarea>
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="form-control">Submit</button> 
            </form>
        </div>

        <div class="col-lg-6 col-12 data-image">
            <img src="~/images/organization-table.png" class="volunteer-image" alt="">
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
